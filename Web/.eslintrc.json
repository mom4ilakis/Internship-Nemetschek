{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "arrow-parens" : 0,
        "indent": ["error", 4],
        "linebreak-style": 0,
        "import/no-unresolved": [
            2,
            {
              "commonjs": true,
              "amd": true
            }
        ]
    },
    "plugins": [
        "import"
    ]
}